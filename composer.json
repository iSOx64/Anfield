{
    "name": "foot/fields",
    "description": "Application de gestion de reservations de terrains de foot en PHP.",
    "type": "project",
    "require": {
        "php": "^8.1",
        "vlucas/phpdotenv": "^5.6",
        "phpmailer/phpmailer": "^6.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"if (!is_dir('storage/logs')) mkdir('storage/logs', 0777, true);\""
        ],
        "post-update-cmd": [
            "@post-install-cmd"
        ]
    }
}
